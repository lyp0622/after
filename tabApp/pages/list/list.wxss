/* pages/list/list.wxss */
.swiper-tab{
    width: 100%;
    text-align: center;
    line-height: 80rpx;}
.swiper-tab-list{  font-size: 30rpx;
    display: inline-block;
    width: 33.33%;
    color: #777777;
}
.on{
   color: blue;
   border-bottom: 3rpx solid blue;}
.center{
  background: #eee;
  width: 100%;
  min-height: 470px;
  position: relative;
}
.center-tab{
  width: 92%;
  height: 420px;
  margin:0 4%;
  background: #fff;
  position: absolute;
  top: 20px;
}
.txt-title{
  display: block;
  width: 100%;
  height: 50px;
  text-indent: 1em;
  line-height: 50px;
  font-size: 18px;
}
.list{
  width: 94%;
  height: 50px;
  background: #eee;
  margin: 0px 3%;
  margin-bottom: 10px;
  border-radius: 5px; 
  line-height: 50px;
  text-indent: .5em;  
}
.check{
  position: absolute;
  right: 10px;
}